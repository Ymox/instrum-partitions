{% extends 'base.html.twig' %}

{% block title %}{{ 'app.band.index.title'|trans }} | {{ parent() }}{% endblock %}

{% block body %}
	<h1>{{ 'app.band.index.heading'|trans }}</h1>

	<table class="table table-sm table-hover">
		<thead>
			<tr>
				<th>{{ 'app.fields.band.name'|trans }}</th>
				<th><a href="{{ path('band_new') }}" class="btn btn-sm btn-success"><i class="fas fa-plus-circle" title="{{ 'global.action.new'|trans }}" aria-hidden="true"></i><span class="visually-hidden">{{ 'global.action.new'|trans }}</span></a></th>
			</tr>
		</thead>
		<tbody class="table-group-divider">
		{% for band in bands %}
			<tr>
				<td>{{ band.name }}</td>
				<td><a href="{{ path('band_edit', {'id': band.id}) }}" class="btn btn-sm btn-outline-warning"><i class="fas fa-pencil-alt" title="{{ 'global.action.edit'|trans }}" aria-hidden="true"></i><span class="visually-hidden">{{ 'global.action.edit'|trans }}</span></a></td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
{% endblock %}
