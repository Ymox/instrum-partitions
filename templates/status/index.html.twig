{% extends 'base.html.twig' %}

{% block title %}{{ 'app.status.index.title'|trans }} | {{ parent() }}{% endblock %}

{% block body %}
	<h1>{{ 'app.status.index.heading'|trans }}</h1>

	<table class="table table-sm table-hover">
		<thead>
			<tr>
				<th>{{ 'app.fields.status.name'|trans }}</th>
				<th><a href="{{ path('status_new') }}" class="btn btn-sm btn-success"><i class="fa fa-plus"></i></a></th>
			</tr>
		</thead>
		<tbody>
		{% for status in statuses %}
			<tr>
				<td>{{ status.name }}</td>
				<td>
					<a href="{{ path('status_edit', { 'id': status.id }) }}" class="btn btn-sm btn-outline-warning" class="btn btn-warning"><i class="fa fa-pencil"></i></a>
				</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
{% endblock %}
