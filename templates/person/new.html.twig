{% extends app.request.xmlHttpRequest ? 'base_modal.html.twig' : 'base.html.twig' %}

{% block title %}{{ 'app.person.new.title'|trans }}{% if not app.request.xmlHttpRequest %} | {{ parent() }}{% endif %}{% endblock %}

{% block body %}
	{% if not app.request.xmlHttpRequest %}
	<h1>{{ 'app.person.new.heading'|trans }}</h1>
	{% endif %}

	{{ form_start(form, {'attr': {'class': app.request.xmlHttpRequest ? 'ajaxify' : null}}) }}
		{{ form_widget(form) }}
		<button type="submit" title="{{ 'global.action.validate'|trans }}" class="btn btn-primary float-start"><i class="fa fa-check" title="{{ 'global.action.validate'|trans }}" aria-hidden="true"></i></button>
	{{ form_end(form) }}
	{% if not app.request.isXmlHttpRequest() %}
	<a href="{{ path('person_index') }}" class="btn btn-light float-end"><i class="fa fa-list"></i></a>
	{% endif %}
{% endblock %}
