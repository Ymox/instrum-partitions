{% extends 'base.html.twig' %}

{% block title %}{{ 'app.person.index.title'|trans }} | {{ parent() }}{% endblock %}

{% block body %}
	<h1>{{ 'app.person.index.heading'|trans }}</h1>

	<table class="table table-sm table-hover">
		<thead>
			<tr>
				<th colspan="3">
					{% set page = app.request.query.get('page', 1) %}
					{% include 'pagination.html.twig' with {'page': page, 'nbPages': nbPages, 'objectName': 'person'} %}
				</th>
			</tr>
			<tr>
				<th>{{ 'app.fields.person.firstName'|trans }}</th>
				<th>{{ 'app.fields.person.lastName'|trans }}</th>
				<th><a href="{{ path('person_new') }}" class="btn btn-success"><i class="fas fa-plus" title="{{ 'global.action.new'|trans }}" aria-hidden="true"></i><span class="sr-only">{{ 'global.action.new'|trans }}</span></a></th>
			</tr>
		</thead>
		<tfoot>
			<tr>
				<th colspan="3">
					{% include 'pagination.html.twig' with {'page': page, 'nbPages': nbPages, 'objectName': 'person'} %}
				</th>
			</tr>
		</tfoot>
		<tbody>
		{% for person in people %}
			<tr>
				<td><a href="{{ path('person_show', {'id': person.id}) }}">{{ person.firstName }}</a></td>
				<td><a href="{{ path('person_show', {'id': person.id}) }}">{{ person.lastName }}</a></td>
				<td>
					<a href="{{ path('person_show', {'id': person.id}) }}" class="btn btn-sm btn-outline-info"><i class="fas fa-eye" title="{{ 'global.action.show'|trans }}" aria-hidden="true"></i><span class="sr-only">{{ 'global.action.show'|trans }}</span></a>
					<a href="{{ path('person_edit', {'id': person.id}) }}" class="btn btn-sm btn-outline-warning"><i class="fas fa-pencil-alt" title="{{ 'global.action.edit'|trans }}" aria-hidden="true"></i><span class="sr-only">{{ 'global.action.edit'|trans }}</span></a>
				</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
{% endblock %}
