{% extends 'base.html.twig' %}

{% block title %}{{ concert.name }} | {{ parent() }}{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.10/css/select2.min.css" />
{% endblock %}

{% block body %}
	<h1>{{ concert.name }}</h1>

	{{ form_start(edit_form) }}
		{{ form_widget(edit_form) }}
		<button type="submit" class="btn btn-primary float-left"><i class="fa fa-check"></i></button>
	{{ form_end(edit_form) }}

	<ul class="list-inline float-right">
		<li class="list-inline-item">
			<a href="{{ path('concert_index') }}" class="btn btn-light"><i class="fa fa-list"></i></a>
		</li>
		<li class="list-inline-item">
			{{ form_start(delete_form) }}
				<button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i></button>
			{{ form_end(delete_form) }}
		</li>
	</ul>
{% endblock %}

{% block javascripts %}
		<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.10/js/select2.min.js"></script>
		<script>/*<[CDATA[*/
		$(function() {
			$('select[multiple]').select2();
		});
		/*]]>*/
		</script>
{% endblock %}