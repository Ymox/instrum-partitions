{% extends 'base.html.twig' %}

{% block title %}{{ ('app.lending.show.title.' ~ (lending.ours ? 'to' : 'by'))|trans({'band': lending.band, 'date': lending.start|date('Y-m-d')}) }} | {{ parent() }}{% endblock %}

{% block body %}
	<h1>{{ ('app.lending.show.heading.' ~ (lending.ours ? 'to' : 'by'))|trans({'band': lending.band, 'date': lending.start|date('Y-m-d')}) }}</h1>

	<table class="table table-sm">
		<tbody>
			<tr>
				<th>{{ 'app.fields.lending.contact'|trans }}</th>
				<td>{{ lending.contact }}</td>
			</tr>
			<tr>
				<th>{{ 'app.fields.lending.start'|trans }}</th>
				<td>{{ lending.start|date('Y-m-d') }}</td>
			</tr>
			<tr>
				<th>{{ 'app.fields.lending.end'|trans }}</th>
				<td>{% if lending.end %}{{ lending.end|date('Y-m-d') }}{% else %}{{ 'app.lending.show.not_ended'|trans }}{% endif %}</td>
			</tr>
			{% for piece in lending.pieces -%}
			<tr>
				<td><a href="{{ path('piece_show', {'id': piece.id}) }}">{{ piece.name }}</a></td>
				<td class="text-center">
					<a href="{{ path('piece_show', {'id': piece.id}) }}" class="btn btn-sm btn-outline-info"><i class="fa fa-eye" title="{{ 'global.action.show'|trans }}" aria-hidden="true"></i><span class="sr-only">{{ 'global.action.show'|trans }}</span></a>

					{% if is_granted('ROLE_USER') %}
					<div class="btn-group btn-group-sm">
						<div class="btn-group btn-group-sm dropend" role="group">
							<button role="button" class="btn btn-outline-warning dropdown-toggle dropdown-toggle-split" title="{{ 'global.action.quick'|trans }}" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<span class="sr-only">{{ 'global.action.quick'|trans }}</span>
							</button>
							<div class="dropdown-menu">
								{% for location in static('LOCATIONS_LIST', piece) %}
								<a class="dropdown-item{{ piece.location == location ? ' active' }}" href="{{ path('piece_update', {'id': piece.id, 'location': location}) }}">{{ ('app.fields.piece.location.' ~ location)|trans }}</a>
								{% endfor %}
								<a class="dropdown-item{{ piece.location is null ? ' active' }}" href="{{ path('piece_update', {'id': piece.id, 'location': ''}) }}">{{ 'app.fields.piece.location.placeholder'|trans }}</a>
								<div class="dropdown-divider"></div>
								{%- for state in static('STATES_LIST', piece) -%}
								<a href="{{ path('piece_update', {'id': piece.id, 'states': {(state): piece.hasState(state) ? -1 : 1}}) }}" class="dropdown-item{{ piece.hasState(state) ? ' active' }}">
								{{- ('app.fields.piece.states.' ~ (piece.hasState(state) ? '' : 'not.') ~ state)|trans -}}
								</a>
								{% endfor %}
							</div>
						</div>
					{% endif -%}
						<a href="{{ path('piece_edit', {'id': piece.id}) }}" class="btn btn-sm btn-outline-warning"><i class="fa fa-pencil" title="{{ 'global.action.edit'|trans }}" aria-hidden="true"></i><span class="sr-only">{{ 'global.action.edit'|trans }}</span></a>
					{% if is_granted('ROLE_USER') %}
					</div>
					{% endif -%}
				</td>
			</tr>
			{% endfor -%}
		</tbody>
	</table>

	<ul class="list-inline float-end">
		<li class="list-inline-item">
			<a href="{{ path('lending_index') }}" class="btn btn-light"><i class="fa fa-list" title="{{ 'global.action.list'|trans }}" aria-hidden="true"></i><span class="sr-only">{{ 'global.action.list'|trans }}</span></a>
		</li>
		<li class="list-inline-item">
			<a href="{{ path('lending_print', {'id': lending.id}) }}" target="_blank" class="btn btn-info"><i class="fa fa-file-pdf-o" title="{{ 'global.action.print'|trans }}" aria-hidden="true"></i><span class="sr-only">{{ 'global.action.print'|trans }}</span></a>
		</li>
		<li class="list-inline-item">
			<a href="{{ path('lending_edit', {'id': lending.id}) }}" class="btn btn-warning"><i class="fa fa-pencil" title="{{ 'global.action.edit'|trans }}" aria-hidden="true"></i><span class="sr-only">{{ 'global.action.edit'|trans }}</span></a>
		</li>
		<li class="list-inline-item">
			{{ form_start(delete_form) }}
				<button type="submit" class="btn btn-danger"><i class="fa fa-trash" title="{{ 'global.action.delete'|trans }}" aria-hidden="true"></i><span class="sr-only">{{ 'global.action.delete'|trans }}</span></button>
			{{ form_end(delete_form) }}
		</li>
	</ul>
{% endblock %}
