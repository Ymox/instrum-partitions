{% extends 'base.html.twig' %}

{% block title %}{{ 'app.lending.new.title'|trans }} | {{ parent() }}{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.10/css/select2.min.css" />
{% endblock %}

{% block body %}
	<h1>{{ 'app.lending.new.heading'|trans }}</h1>
	
	{{ form_start(form) }}
		{{ form_widget(form) }}
		<button type="submit" title="{{ 'global.action.validate'|trans }}" class="btn btn-primary float-left"><i class="fa fa-check" title="{{ 'global.action.validate'|trans }}" aria-hidden="true"></i></button>
	{{ form_end(form) }}
	<a href="{{ path('lending_index') }}" class="btn btn-light float-right"><i class="fa fa-list"></i></a>
{% endblock %}

{% block javascripts %}
		<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
		<script src="{{ asset('js/entity_adder.js') }}"></script>
		<script src="{{ asset('js/select2.min.js') }}"></script>
		<script src="{{ asset('js/ajaxify.js') }}"></script>
		<script>/*<[CDATA[*/
		$(function() {
			$('select').select2();
		});
		/*]]>*/
		</script>
{% endblock %}