{% extends 'base.html.twig' %}

{% block title %}{{ 'app.publisher.new.title'|trans }}{% endblock %}

{% block body %}
	<h1>{{ 'app.publisher.new.heading'|trans }}</h1>

	{{ form_start(form) }}
		{{ form_widget(form) }}
		<button type="submit" title="{{ 'global.action.validate'|trans }}" class="btn btn-primary float-start"><i class="fa fa-check" title="{{ 'global.action.validate'|trans }}" aria-hidden="true"></i></button>
	{{ form_end(form) }}

	<a href="{{ path('publisher_index') }}" class="btn btn-light float-end"><i class="fa fa-list"></i></a>
{% endblock %}