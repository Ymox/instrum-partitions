{% extends 'base.html.twig' %}

{% block title %}{{ 'ysoft.instrum.concert.new.title'|trans }} | {{ parent() }}{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="{{ asset('css/select2.min.css') }}" />
{% endblock %}

{% block body %}
	<h1>{{ 'ysoft.instrum.concert.new.heading'|trans }}</h1>

	{{ form_start(form) }}
		{{ form_widget(form) }}
		<button type="submit" class="btn btn-primary float-left"><i class="fa fa-check"></i></button>
	{{ form_end(form) }}

	<a href="{{ path('concert_index') }}" class="btn btn-light float-right"><i class="fa fa-list"></i></a>
{% endblock %}

{% block javascripts %}
		<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.10/js/select2.min.js"></script>
		<script>/*<[CDATA[*/
		$(document).ready( function() {
			$('select[multiple]').select2();
		});
		/*]]>*/
		</script>
{% endblock %}