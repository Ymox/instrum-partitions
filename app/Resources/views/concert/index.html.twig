{% extends 'base.html.twig' %}

{% block title %}{{ 'ysoft.instrum.concert.index.title'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'ysoft.instrum.concert.index.heading'|trans }}</h1>

    <table class="table table-sm table-hover">
        <thead>
			<tr>
				<th colspan="3">
					<ul class="pagination mx-auto">
					{% set page = app.request.query.get('page', 1) %}
					{%- if not (page == 1) %}
						<li class="page-item"><a href="{{ path('concert_index', {'page': page - 1}) }}" class="page-link"><i class="fa fa-chevron-left"></i></a></li>
					{% endif %}
					{% if nbPages > 5 and page > 3 %}
						<li class="page-item"><a href="{{ path('concert_index', {'page': 1}) }}" class="page-link">1</a></li>
					{% endif %}
					{% if page > 4 %}
						<li class="page-item"><a class="page-link">…</a></li>
					{% endif %}
					{% for i in max(1, page - 2)..min(nbPages, page + 2) %}
						<li class="page-item{% if i == app.request.get('page', 1) %} active{% endif %}"><a href="{{ path('concert_index', {'page': i}) }}" class="page-link">{{ i }}</a></li>
					{% endfor %}
					{% if page < nbPages - 3 %}
						<li class="page-item"><a class="page-link">…</a></li>
					{% endif %}
					{% if nbPages > 5 and page < nbPages - 2 %}
						<li class="page-item"><a href="{{ path('concert_index', {'page': nbPages}) }}" class="page-link">{{ nbPages }}</a></li>
					{% endif %}
					{%- if not (page == nbPages) %}
						<li class="page-item"><a href="{{ path('concert_index', {'page': page + 1}) }}" class="page-link"><i class="fa fa-chevron-right"></i></a></li>
					{% endif %}
					</ul>
				</th>
			</tr>
            <tr>
                <th>{{ 'ysoft.instrum.fields.concert.name'|trans }}</th>
                <th>{{ 'ysoft.instrum.fields.concert.date'|trans }}</th>
                <th><a href="{{ path('concert_new') }}" class="btn btn-sm btn-success"><i class="fa fa-plus"></i></a></th>
            </tr>
        </thead>
        <tfoot>
			<tr>
				<th colspan="3">
					<ul class="pagination mx-auto">
					{% set page = app.request.query.get('page', 1) %}
					{%- if not (page == 1) %}
						<li class="page-item"><a href="{{ path('concert_index', {'page': page - 1}) }}" class="page-link"><i class="fa fa-chevron-left"></i></a></li>
					{% endif %}
					{% if nbPages > 5 and page > 3 %}
						<li class="page-item"><a href="{{ path('concert_index', {'page': 1}) }}" class="page-link">1</a></li>
					{% endif %}
					{% if page > 4 %}
						<li class="page-item"><a class="page-link">…</a></li>
					{% endif %}
					{% for i in max(1, page - 2)..min(nbPages, page + 2) %}
						<li class="page-item{% if i == app.request.get('page', 1) %} active{% endif %}"><a href="{{ path('concert_index', {'page': i}) }}" class="page-link">{{ i }}</a></li>
					{% endfor %}
					{% if page < nbPages - 3 %}
						<li class="page-item"><a class="page-link">…</a></li>
					{% endif %}
					{% if nbPages > 5 and page < nbPages - 2 %}
						<li class="page-item"><a href="{{ path('concert_index', {'page': nbPages}) }}" class="page-link">{{ nbPages }}</a></li>
					{% endif %}
					{%- if not (page == nbPages) %}
						<li class="page-item"><a href="{{ path('concert_index', {'page': page + 1}) }}" class="page-link"><i class="fa fa-chevron-right"></i></a></li>
					{% endif %}
					</ul>
				</th>
			</tr>
        </tfoot>
        <tbody>
        {% for concert in concerts %}
            <tr>
                <td><a href="{{ path('concert_show', { 'id': concert.id }) }}">{{ concert.name }}</a></td>
                <td>{{ concert.date|date('Y-m-d H:i') }}</td>
                <td>
                	<a href="{{ path('concert_show', { 'id': concert.id }) }}" class="btn btn-sm btn-outline-info"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('concert_edit', { 'id': concert.id }) }}" class="btn btn-sm btn-outline-warning"><i class="fa fa-pencil"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}