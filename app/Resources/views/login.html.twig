<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8" />
		<title>Authentification | Partitioth√®que Instrum</title>
		<link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}" />
		<link rel="stylesheet" type="text/css" href="{{ asset('css/font-awesome.min.css') }}" />
		<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
	</head>
	<body>
		<div class="container">
			{% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <form method="post" class="col-xl-4 col-lg-4 col-md-6 col-sm-6 col-xs-12 mx-auto text-center">
            	<div class="form-group">
                    <input type="text" name="_username" id="username" class="form-control" placeholder="{{ 'ysoft.login.user'|trans }}" value="{{ lastUsername }}" />
                </div>

				<div class="form-group">            
                    <input type="password" name="_password" id="password" class="form-control" placeholder="{{ 'ysoft.login.password'|trans }}" />
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
            
                <button type="submit" class="btn btn-primary"><i class="fa fa-unlock"></i></button>
            </form>
		</div>
	</body>
</html>