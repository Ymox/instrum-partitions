{% extends 'base.html.twig' %}

{% block title %}{{ person }}{% endblock %}

{% block body %}
	<h1>{{ person }}</h1>

	<table class="table table-condensed table-hover">
		<tbody>
			<tr>
				<th>{{ 'ysoft.instrum.fields.person.firstName'|trans }}</th>
				<td>{{ person.firstName }}</td>
			</tr>
			<tr>
				<th>{{ 'ysoft.instrum.fields.person.lastName'|trans }}</th>
				<td>{{ person.lastName }}</td>
			</tr>
			<tr>
				<th>{{ 'ysoft.instrum.fields.person.compositions'|trans }}</th>
				<td>{{ person.compositions.count }}</th>
			</tr>
			<tr>
				<th>{{ 'ysoft.instrum.fields.person.arrangements'|trans }}</th>
				<td>{{ person.arrangements.count }}</th>
			</tr>
		</tbody>
	</table>

	<ul>
		<li>
			<a href="{{ path('person_index') }}" class="btn btn-secondary"><i class="fa fa-arrow-left"></i></a>
		</li>
		<li>
			<a href="{{ path('person_edit', { 'id': person.id }) }}" class="btn btn-warning"><i class="fa fa-pencil"></i></a>
		</li>
		<li>
			{{ form_start(delete_form) }}
				<button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i></button>
			{{ form_end(delete_form) }}
		</li>
	</ul>
{% endblock %}
