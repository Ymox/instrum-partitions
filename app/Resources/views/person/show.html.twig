{% extends 'base.html.twig' %}

{% block body %}
	<h1>Person</h1>

	<table>
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ person.id }}</td>
			</tr>
			<tr>
				<th>Firstname</th>
				<td>{{ person.firstName }}</td>
			</tr>
			<tr>
				<th>Lastname</th>
				<td>{{ person.lastName }}</td>
			</tr>
		</tbody>
	</table>

	<ul>
		<li>
			<a href="{{ path('person_index') }}" class="btn btn-secondary"><i class="fa fa-arrow-left"></i></a>
		</li>
		<li>
			<a href="{{ path('person_edit', { 'id': person.id }) }}" class="btn btn-sm btn-danger">><i class="fa fa-pencil"></i></a>
		</li>
		<li>
			{{ form_start(delete_form) }}
				<button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i></button>
			{{ form_end(delete_form) }}
		</li>
	</ul>
{% endblock %}
